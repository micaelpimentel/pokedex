<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_pokemonPic"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pikachu"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_pokemonNumber"
        app:layout_constraintStart_toEndOf="@+id/iv_pokemonPic"
        app:layout_constraintTop_toTopOf="@+id/iv_pokemonPic"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_pokemonNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#025"
        android:textColor="#BCBCBC"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pokemonPic"
        app:layout_constraintStart_toStartOf="@+id/tv_pokemonName"
        app:layout_constraintTop_toBottomOf="@+id/tv_pokemonName" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EBEBEB"
        app:layout_constraintStart_toStartOf="@id/iv_pokemonPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>